{
  "categories":[
     "apps/clusters"
  ],
  "description":{
     "text":"Instaling Api gateway of newwork"
  },
  "id":"newwork-api-gateway",  
  "engine":"",
  "log": "Testin the env names ${settings.tenant}",  
  "name": "${settings.tenant_name} API-GATEWAY",
  "ssl":true,
  "type":"install",
  "version":"1.8.2",  
  "nodes":[
     {
        "cloudlets":16,
        "diskLimit":"102.4G",
        "docker":{
           "cmd":"/usr/lib/systemd/systemd",
           "env":{
              "ADMINPANEL_ENABLED":"false",
              "DOCKER_EXPOSED_PORT":"22,25,5432,7979,80,21",
              "PATH":"/usr/local/sbin:/usr/local/bin:/usr/sbin:/usr/bin:/sbin:/bin",
              "PHPPGADMIN_VERSION":"7.12.1",
              "POSTGRES_VERSION":"11.8",
              "STACK_USER":"postgres"
           },
           "volumes":[
              "/var/lib/pgsql/data"
           ]
        },
        "fixedCloudlets":8,
        "nodeGroup":"sqldb",
        "nodeType":"postgresql",
        "tag":"11.8"
     },
     {
        "cloudlets":16,
        "diskLimit":"102.4G",
        "docker":{
           "entrypoint":"/app/start.sh",
           "env":{
              "DB_ADAPTER":"postgres",
              "DB_PG_SCHEMA":"konga",
              "DB_URI":"postgresql://kong:${kong_password}@node326-api-gateway-production.de.gklabs.live:5432/konga_db",
              "DOCKER_EXPOSED_PORT":"80",
              "KONGA_BASE_URL":"https://${this.envName}.de.gklabs.live",
              "KONGA_LOG_LEVEL":"warn",
              "KONGA_NODE_ENV":"production",
              "MASTER_HOST":"node327",
              "MASTER_ID":"327",
              "MASTER_IP":"172.16.3.96",
              "NODE_VERSION":"12.16.3",
              "PATH":"/usr/local/sbin:/usr/local/bin:/usr/sbin:/usr/bin:/sbin:/bin",
              "YARN_VERSION":"1.22.4"
           },
           "image":"pantsel/konga:latest",
           "volumes":[
              "/app/kongadata"
           ]
        },
        "nodeGroup":"cp"
     },
     {
        "cloudlets":16,
        "diskLimit":"102.4G",
        "docker":{
           "cmd":"kong docker-start",
           "entrypoint":"/docker-entrypoint.sh",
           "env":{
              "DOCKER_EXPOSED_PORT":"80,443,8001,8444",
              "KONG_ADMIN_ACCESS_LOG":"/dev/stdout",
              "KONG_ADMIN_ERROR_LOG":"/dev/stderr",
              "KONG_ADMIN_LISTEN":"0.0.0.0:8001, 0.0.0.0:8444 ssl",
              "KONG_DATABASE":"postgres",
              "KONG_NGINX_PROXY_LUA_SSL_TRUSTED_CERTIFICATE":"/etc/ssl/certs/ca-certificates.crt",
              "KONG_PG_DATABASE":"kong_db",
              "KONG_PG_HOST":"node326-api-gateway-production.de.gklabs.live",
              "KONG_PG_PASSWORD":"4PoVBc+zs3FxI6+J6IQa7d8zJBFYF7qo0NGlcj+GOM0=",
              "KONG_PG_SSL":"off",
              "KONG_PG_USER":"kong",
              "KONG_PLUGINS":"bundled,oidc,uma,acme",
              "KONG_PROXY_ACCESS_LOG":"/dev/stdout",
              "KONG_PROXY_ERROR_LOG":"/dev/stderr",
              "KONG_PROXY_LISTEN":"0.0.0.0:80 reuseport backlog=16384, 0.0.0.0:443 http2 ssl reuseport backlog=16384",
              "KONG_SHA256":"5af1178111958b2e325c5b18690f4e7ddf064d28139ff38188b1e2e432ea99ff",
              "KONG_VERSION":"2.0.0"
           },
           "image":"gaia-222517/newwork-kong:2.0.0-alpine",           
           "registry":{
               "url":"${settings.url}",
               "user":"${settings.user}",
               "password":"${settings.reg_pass.toJson()}"
            }
        },        
        "nodeGroup":"bl"
     }
  ],
  "actions": {
   "init": [
     {
       "forEach(nodes.sqldb)": [
         {
           "if (${@i.id} == ${nodes.sqldb.master.id})": {
             "setGlobals": {
               "mId": "${@i.id}",
               "mIP": "${@i.address}",
               "kongDbAddress":"node${@i.id}-${env.domain}:${@i.port}"
             }
           }
         }
       ]
     },
     {
        "log":["${globals.kongDbAddress}","${globals.kong_password}"]
     },
     {
       "cmd [${globals.mId}]": "wget \"${baseUrl}scripts/execCmdScript.sh\" -O /var/lib/pgsql/script.sh 2>&1\nbash -x /var/lib/pgsql/script.sh master ${kong_password} 1>> /var/log/run.log 2>> /var/log/run.log"
     }
   ]
 },
  "onInstall":[{
      "log":"USER --->>>> ${settings.user}"      
   },
   "init"]
}